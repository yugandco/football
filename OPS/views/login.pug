extends layout

block content
  .container
    .row
      .col-6.offset-3.login_block  
        h1 #{title}
        form(method='POST', action='/users/login')
          .form-group
            label Username
            input.form-control(name='username', type='text')
          .form-group
            label Password
            input.form-control(name='password', type='password')
          input.btn.btn-outline-primary(type='submit', value='Submit')
